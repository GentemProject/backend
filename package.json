{
  "name": "backend",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "author": "Jean Pa√∫l Mayorga",
  "scripts": {
    "copy-schemas": "copyfiles -u 1 src/**/**/*.graphql ./build",
    "prebuild": "yarn clean:build",
    "build": "tsc && yarn copy-schemas",
    "clean:modules": "rm -rf ./node_modules",
    "clean:build": "rm -rf ./build",
    "clean:all": "yarn clean:modules && yarn clean:build",
    "reset": "yarn clean:all && yarn build",
    "start": "yarn copy-schemas && node ./build/app.js",
    "dev": "tsc-watch --onSuccess \"yarn start\"",
    "format": "prettier --write \"src/**/*.ts\" --write \"package.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" --check \"package.json\"",
    "migrate:causes": "ts-node src/scripts/migrateCauses.ts",
    "migrate:orgs": "ts-node src/scripts/migrateOrgs.ts",
    "migrate:all": "ts-node src/scripts/migrateCauses.ts && ts-node src/scripts/migrateOrgs.ts",
    "test": "jest --verbose --maxWorkers=1 --forceExit",
    "test:watch": "jest --watchAll --verbose --maxWorkers=1"
  },
  "dependencies": {
    "@graphql-tools/merge": "^6.2.14",
    "apollo-server-express": "^2.18.2",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.656.0",
    "aws-serverless-express": "^3.3.8",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "envalid": "^6.0.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "graphql": "^15.4.0",
    "mongoose": "5.10.18",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.5.3",
    "tsc-watch": "^4.2.3",
    "type-graphql": "^1.1.0",
    "typescript": "^4.3.2",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@graphql-tools/load-files": "^6.3.2",
    "@typegoose/typegoose": "^7.4.8",
    "@types/auth0": "^2.33.3",
    "@types/aws-lambda": "^8.10.51",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.37",
    "@types/node": "^13.11.1",
    "@types/pino": "^6.3.3",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-jest": "^27.0.2",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.3"
  }
}
